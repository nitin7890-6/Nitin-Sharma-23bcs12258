<body>
  <h1>üõçÔ∏è Product Filter</h1>

  <div class="filter-section">
    <label for="categorySelect"><strong>Filter by Category:</strong></label>
    <select id="categorySelect">
      <option value="all">All</option>
    </select>
  </div>

  <div class="product-list" id="productList"></div>

  <script>
    // Product data
    const products = [
      { name: "Apple iPhone 15", category: "Electronics" },
      { name: "Nike Running Shoes", category: "Fashion" },
      { name: "Samsung Galaxy S23", category: "Electronics" },
      { name: "Wooden Study Table", category: "Furniture" },
      { name: "Levi‚Äôs Denim Jacket", category: "Fashion" },
      { name: "Office Chair", category: "Furniture" },
      { name: "Sony Headphones", category: "Electronics" },
    ];

    const productList = document.getElementById("productList");
    const categorySelect = document.getElementById("categorySelect");

    // Dynamically populate dropdown with unique categories
    const categories = ["all", ...new Set(products.map(p => p.category))];
    categories.forEach(cat => {
      const option = document.createElement("option");
      option.value = cat;
      option.textContent = cat;
      categorySelect.appendChild(option);
    });

    // Function to render products
    function renderProducts(filterCategory = "all") {
      productList.innerHTML = ""; // clear existing
      const filtered = filterCategory === "all"
        ? products
        : products.filter(p => p.category === filterCategory);

      if (filtered.length === 0) {
        productList.innerHTML = `<p style="grid-column: 1 / -1; text-align: center; color: #777;">No products found.</p>`;
        return;
      }

      filtered.forEach(product => {
        const card = document.createElement("div");
        card.className = "product-card";
        card.innerHTML = `
          <div class="product-name">${product.name}</div>
          <div class="product-category">${product.category}</div>
        `;
        productList.appendChild(card);
      });
    }

    // Listen for dropdown change
    categorySelect.addEventListener("change", (e) => {
      renderProducts(e.target.value);
    });

    // Initial render
    renderProducts();
  </script>
</body>
</html>
